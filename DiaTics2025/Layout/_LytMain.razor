@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@using DiaTics2025.Pages;

<header id="header" class="header d-flex align-items-center fixed-top">
    <NavBarMain />
</header>

<main class="main">
    @Body
</main>


<footer id="footer" class="footer">   
    <div class="container copyright text-center mt-4">
        <p>© <span>Copyright</span> <strong class="px-1 sitename">FlexStart</strong> <span>All Rights Reserved</span></p>
        <div class="credits">
            by gussross @DateTime.Now.Year
        </div>
    </div>
</footer>


@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("initializeFlexStart");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al inicializar JavaScript: {ex.Message}");
            }
        }
    }
}
